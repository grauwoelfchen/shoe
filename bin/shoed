#!/usr/bin/env ruby
# Shoe Server

$: << File.expand_path("../src", File.dirname(__FILE__))
$: << File.expand_path("..", File.dirname(__FILE__))

require 'drb/drb'
require 'util/shoeapp'

$l_htmlgrid = SHOE::App.new

$0 = "Shoe (ShoeApp)"

DRb.start_service(SHOE::SERVER_URI, $l_htmlgrid)
DRb.thread.join
